<% provide(:title, "BlogSports") %>
<!-- *** TOPBAR *** -->
<div class="col-sm-12">
  <ul class="breadcrumb">
    <li>
      <a href="#"><%= t "home" %></a>
    </li>
    <li><%= t "list_blog" %></li>
  </ul>
</div>
<div class="col-md-4">
  <!-- *** BLOG MENU *** -->
  <div class="panel panel-default sidebar-menu">
    <div class="panel-heading">
       <h3 class="panel-title"><%= t "users" %></h3>
    </div>
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked users">
        <% @users.each do |user| %>
          <li>
            <%= gravatar_for user, size: 50 %><br>
            <%= link_to user.name, user %>
            <% if current_user && current_user.admin? && !current_user?(user) %>
              <br><br><%= link_to "delete", user, method: :delete, data: { confirm: t("confirm_action") }, class: "text-danger" %>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @users%>
    </div>
  </div>
</div>
