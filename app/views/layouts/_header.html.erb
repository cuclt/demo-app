<div class="container">
  <div class="col-md-6 offer" data-animate="fadeInDown">
    <h3><%= link_to t("title"), root_path %></h3>
  </div>
  <div class="col-md-6" data-animate="fadeInDown">
    <ul class="menu">
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "account" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", '#' %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
      <% else %>
        <li>
          <%= link_to t("signup"), signup_path, class: "btn btn-success btn-sm" %>
        </li>
        <li>
          <a href="#" class="btn btn-success btn-sm"  data-toggle="modal" data-target="#login-modal"><%= t "signin" %></a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render "layouts/signin" %>
